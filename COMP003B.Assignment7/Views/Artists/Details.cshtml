@model COMP003B.Assignment7.Models.Artist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistAlias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArtistAlias)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArtistFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArtistLastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistGenre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArtistGenre)
        </dd>
    </dl>
</div>

<div class="col-md-4">
    <h4>Songs</h4>
    <ul>
        @foreach (Song song in ViewBag.Songs)
        {
            <li>@song.SongName</li>
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArtistId">Edit</a> |
